<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Widget_Kotlin"
        android:networkSecurityConfig="@xml/network_security_config">
        <receiver
            android:name=".WIDGETS.BASE_WIDGET.GLANCE.WIDGETS.BASE.SHOWOFF.Base_Glance_Receiver"
            android:label="ShowOff"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/glance_widget_info" />
        </receiver>
        <receiver
            android:name=".WIDGETS.BASE_WIDGET.GLANCE.WIDGETS.BASE.SELECTOR.SelectorGlanceReciever"
            android:label="Selector"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/glance_widget_info" />
        </receiver>
        <activity
            android:name=".WIDGETS.BASE_WIDGET.COMPOSE.PopUpActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight.Dialog"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:launchMode="singleInstancePerTask"
            android:taskAffinity="">

            <!-- This makes it appear as a launcher icon -->
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->
<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
        <activity
            android:name=".WIDGETS.BASE_WIDGET.COMPOSE.AddStationActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight.Dialog"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:launchMode="singleInstancePerTask"
            android:taskAffinity="">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>